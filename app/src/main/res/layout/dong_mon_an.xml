<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/imageviewmonan"
        android:layout_margin="10dp"
        android:layout_width="150dp"
        android:layout_height="120dp" />
    <TextView
        android:text="Ten mon an"
        android:textColor="#f20"
        android:id="@+id/textviewtenmonan"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/imageviewmonan"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Gia mon an"
        android:textColor="#2a49b3"
        android:layout_below="@id/textviewtenmonan"
        android:id="@+id/textviewgiamonan"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/imageviewmonan"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>